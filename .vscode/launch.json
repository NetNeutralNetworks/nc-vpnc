    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "sudo": true,
        },
        {
            "name": "Python: Module - main",
            "type": "python",
            "request": "launch",
            "module": "vpnc.main",
            "console": "integratedTerminal",
            "justMyCode": true,
            "sudo": true,
            "cwd": "${workspaceFolder}/vpnc/"
        },
        {
            "name": "Python: Module - vpnctl",
            "type": "python",
            "request": "launch",
            "module": "vpnc.ctl.main",
            "console": "integratedTerminal",
            "justMyCode": true,
            "sudo": true,
            "cwd": "${workspaceFolder}/vpnc/",
            "args": [
                "service",
                // "uplink",
